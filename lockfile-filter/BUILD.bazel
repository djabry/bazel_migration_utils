package(default_visibility = ["//visibility:public"])

load("@npm_bazel_typescript//:index.bzl", "ts_library")

all_sources = ["**/*.ts"]

all_tests = [
    "**/*.spec.ts",
    "**/test/**",
]

module_name = "@djabry/lockfile-filter"

npm_deps = [
    "@npm//ts-stream",
    "@npm//yargs",
]

ts_library(
    name = "lockfile-filter",
    module_name = module_name,
    srcs = glob(
        all_sources,
        exclude = all_tests,
    ),
    deps = [
        "@npm//@types/node",
        "@npm//@types/yargs",
    ] + npm_deps,
)

ts_library(
    name = "test_lib",
    srcs = glob(all_tests),
    deps = [
        ":lockfile-filter",
        "@npm//@types/chai",
        "@npm//@types/node",
        "@npm//@types/jasmine",
        "@npm//chai",
    ],
)

load("@npm_bazel_jasmine//:index.bzl", "jasmine_node_test")

jasmine_node_test(
    name = "test",
    deps = [
        ":test-yarn.lock",
        ":test_lib",
        "@npm//chai",
        "@npm//jasmine",
    ],
)

load("@build_bazel_rules_nodejs//:index.bzl", "nodejs_binary")

nodejs_binary(
    name = "bin",
    data = [
        ":lockfile-filter",
        "@npm//source-map-support",
    ],
    entry_point = ":index.ts",
)

load("//npm:package.bzl", "enhanced_npm_package")
load("//:version.bzl", "VERSION")

enhanced_npm_package(
    name = "package",
    srcs = [
        "README.md"
    ],
    version = VERSION,
    module_name = module_name,
    root_package_json = "//:package.json",
    npm_deps = npm_deps,
    package_layers = [
        "//:common.package.json",
        "template.package.json"
    ],
    deps = [":lockfile-filter"],
)

