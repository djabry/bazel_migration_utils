package(default_visibility = ["//visibility:public"])
load("@npm//@bazel/typescript:index.bzl", "ts_library")

all_sources = ["**/*.ts"]

all_tests = [
    "**/*.spec.ts",
    "**/test/**",
]

lib_name = "lib"

module_name = "@djabry/deps-builder"

ts_library(
    name = lib_name,
    srcs = glob(
        all_sources,
        exclude = all_tests,
    ),
    module_name = module_name,
    deps = [
        "@npm//@types/node",
        "@npm//@types/yargs",
        "@npm//jsonpath",
        "@npm//yargs",
    ],
)

ts_library(
    name = "test_lib",
    srcs = glob(all_tests),
    deps = [
        lib_name,
        "@npm//@types/chai",
        "@npm//@types/jasmine",
        "@npm//chai",
    ],
)

load("@npm//@bazel/jasmine:index.bzl", "jasmine_node_test")

jasmine_node_test(
    name = "test",
    deps = [
        ":test_lib",
        "@npm//chai",
        "@npm//jasmine",
    ],
)

load("@build_bazel_rules_nodejs//:index.bzl", "nodejs_binary")

nodejs_binary(
    name = "bin",
    data = [
        lib_name,
        "@npm//source-map-support",
    ],
    entry_point = "cli.ts",
)
