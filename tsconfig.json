{
  "compilerOptions": {
    "module":  "umd",
    "target": "es5",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "lib": [
      "es2019",
      "dom"
    ],
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "@djabry/*": ["dist/bin/*"]
    }
  },
  "exclude": [
    "**/*.spec.ts",
    "node_modules"
  ]
}

